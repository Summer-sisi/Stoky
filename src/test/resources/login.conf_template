com.sun.security.jgss.krb5.initiate {
    com.floragunn.searchguard.tests.DummyLoginModule
	required;
	com.sun.security.auth.module.Krb5LoginModule
	required
	refreshKrb5Config=true
	storeKey=true
	useTicketCache=false
	useFirstPass=true
	debug=${debug}
	;
};

com.sun.security.jgss.krb5.accept {
    com.sun.security.auth.module.Krb5LoginModule
    required
    refreshKrb5Config=true
    storeKey=true
    isInitiator=false
    principal="HTTP/${hostname}@EXAMPLE.COM"
    doNotPrompt=true
    useKeyTab=true
    keyTab="${keytab}"
    debug=${debug}
    ;
};
